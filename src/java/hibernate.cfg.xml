<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/sigeresbdd?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">123</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="com/sigeres/hibernate/Inventario.hbm.xml"/>
    <mapping resource="com/sigeres/hibernate/Existencias.hbm.xml"/>
    <mapping resource="com/sigeres/hibernate/Articulos.hbm.xml"/>
    <mapping resource="com/sigeres/hibernate/Repartos.hbm.xml"/>
    <mapping resource="com/sigeres/hibernate/Clientes.hbm.xml"/>
    <mapping resource="com/sigeres/hibernate/Usuarios.hbm.xml"/>
    <mapping resource="com/sigeres/hibernate/Tipousuario.hbm.xml"/>
    <mapping resource="com/sigeres/hibernate/Proveedores.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
